{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\devApp\\mingw64\\bin\\gcc.exe",
            // "command": "D:\\devApp\\mingw32\\bin\\gcc.exe",
            "args": [
                "-Wall", //可以选择去掉，显示警告
                "-fdiagnostics-color=always",
                "-g",
                // "${file}",
                "*.c",
                "-o",
                //"${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${fileDirname}\\exe\\${fileBasenameNoExtension}.exe", //收纳生成的 exe 可执行文件
                "-fexec-charset=GBK", //这行代码保证了在cmd外部终端运行时，不会乱码
            ],
            "options": {
                "cwd": "${workspaceFolder}" // 设置当前目录为工作区目录
                // "cwd": "${fileDirname}"
                // "cwd": "D:\\devApp\\mingw64\\bin" //改路径
                // "cwd": "D:\\devApp\\mingw32\\bin" //改路径
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}